
<!-- Will remove padding later for full screen -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin_full_screen"
    android:paddingRight="@dimen/activity_horizontal_margin_full_screen"
    android:paddingTop="@dimen/activity_vertical_margin_full_screen"
    android:paddingBottom="@dimen/activity_vertical_margin_full_screen"
    android:id="@+id/drawLayout"
    tools:context="com.example.chung_che.myfirstapp.DrawActivity">

    <!-- TextView -->
    <EditText
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/noteTextView"
        android:layout_marginLeft="50dp"
        android:enabled="false"
        android:background="#00ffffff"
        android:layout_marginTop="60dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/backgroundImageView"
        android:contentDescription="@string/att_backgroundImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />


    <com.example.chung_che.myfirstapp.QuadDrawView
        android:id="@+id/quadDrawView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true" />

    <!-- android:layout_alignParentLeft="true" -->
    <!-- android:layout_alignParentStart="true" -->
    <!-- android:imeOptions="flag" -->
    <!-- android:layout_below="@+id/noteTextView" -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/testMoveImageView"
        android:contentDescription="@string/att_backgroundImageView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editTextOneLine"
        android:enabled="false"
        android:background="#00ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/empty_string" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editTextTwoLines"
        android:enabled="false"
        android:background="#00ffffff"
        android:text="@string/empty_two_lines"
        android:layout_below="@+id/editTextOneLine"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/noteText"
        android:background="#54fffe03"
        android:maxLines="3"
        android:maxLength="40"
        android:nestedScrollingEnabled="false"
        android:layout_marginTop="150dp" />


</RelativeLayout>
